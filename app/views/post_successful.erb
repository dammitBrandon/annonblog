<div class="container">
  <div id="content">
    <p>
        <%= @blog.title %> <br>
        <%= @blog.body %> <br>
        <% unless @blog.tags.empty? %>
          <%@blog.tags.each do |tag|%>
            <a href="#"><%=tag.name %></a><br>
          <%end%>
        <% else %>
          <p>No tags!</p>
        <%end%>
    </p>
  </div>
</div>
